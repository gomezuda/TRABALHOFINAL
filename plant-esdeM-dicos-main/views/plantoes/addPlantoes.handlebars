<section class="container">
        <section class="d-flex justify-content-between mt-4">
            <h2>Cadastrar Plantão</h2>
            <a href="/plantoes" class="btn btn-info">Voltar</a>
        </section>

        <form method="post" action="/plantoes/inserir">
            <div class="form-group">
                <label for="nome_medico">Médico</label>
                <select class="form-control" id="nome_medico" name="nome_medico" required>
                    <option value="">Selecione o Médico</option>
                    {{#each medicos}}
                        <option value="{{id}}">{{nome}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="especialidade">Especialidade</label>
                <select class="form-control" id="especialidade" name="especialidade" required>
                    <option value="">Selecione a Especialidade</option>
                    {{#each especialidades}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <div class="form-group">
                <label for="data">Data</label>
                <input type="form-control" class="form-control" id="data" name="data" required>
            </div>

            <div class="form-group">
                <label for="turno">Turno</label>
                <select class="form-control" id="turno" name="turno" required>
                    <option value="">Selecione o Turno</option>
                    {{#each turnos}}
                        <option value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
            </div>

            <button type="submit" class="btn btn-info mt-3">Cadastrar</button>
        </form>
</section>
